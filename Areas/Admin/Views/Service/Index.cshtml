@using Maxim.Models;
@model List<Service>

    <a class="btn btn-primary" style="margin-left:45%" asp-action="Create" asp-controller="Service">Create</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Icon</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Icon</td>
            <td>
                <a class="btn btn-warning" asp-route-id="@item.Id" asp-action="Update" asp-controller="Service">Update</a>
                <a class="btn btn-danger" asp-route-id="@item.Id"  asp-action="Delete" asp-controller="Service">Delete</a>

            </td>
        </tr>
        }
    </tbody>
</table>